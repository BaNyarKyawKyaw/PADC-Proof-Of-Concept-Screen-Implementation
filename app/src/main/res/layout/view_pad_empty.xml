<?xml version="1.0" encoding="utf-8"?>
<com.bnkk.padc.proof.of.concept.screen.implementation.components.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_empty_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/empty_data_placeholder" />

    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_empty_image"
        android:layout_centerHorizontal="true"
        android:text="@string/no_data"
        android:textColor="@color/primary_text" />

</com.bnkk.padc.proof.of.concept.screen.implementation.components.EmptyViewPod>